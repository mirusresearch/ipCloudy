{
    "env": {
        "node": true,
        "es6": true
    },
    "plugins": ["prettier"],
    "extends": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "tabWidth": 4,
                "printWidth": 100
            }
        ],
        "no-tabs": "error"
    }
}
