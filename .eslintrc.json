{
    "env": {
        "node": true,
        "es6": true

    },
    "plugins": ["prettier"],
    "extends": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "tabWidth": 4,
                "printWidth": 100
            }
        ],
        "comma-dangle": [
            "error",
            {
                "functions": "never",
                "arrays": "only-multiline",
                "objects": "only-multiline"
            }
        ],
        "no-tabs": "error"
    }
}
